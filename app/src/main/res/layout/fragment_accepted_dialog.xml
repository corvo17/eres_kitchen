<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DialogFragmentMine">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingEnd="100dp"
    android:layout_margin="16dp"
    android:paddingLeft="100dp"
    android:paddingBottom="10dp"
    android:background="@drawable/white_background">
    <TextView
        android:id="@+id/tableName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_weight="1"
        android:textStyle="bold|italic"
        android:text="Table No 10"/>
    <!-- TODO: Update blank fragment layout -->
   <android.support.v7.widget.RecyclerView
       android:id="@+id/RVDialogOrders"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="25"
       android:background="@drawable/background_subcategory"
       app:layoutManager="android.support.v7.widget.LinearLayoutManager"
       android:orientation="vertical" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/back_btn_ok"
            android:textColor="#ffffff"
            android:text="OK"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
    <ImageView
        android:id="@+id/exitIMG"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00000000"
        android:src="@drawable/exit_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>